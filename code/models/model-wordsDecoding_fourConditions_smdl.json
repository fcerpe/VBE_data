{
  "Name": "wordsDecoding MVPA",
  "BIDSModelVersion": "1.0.0",
  "Description": "contrasts for the visbra dataset",
  "Input": {
    "task": [
        "wordsDecoding"
      ]
  },
  "Nodes": [
      {
          "Level": "Run",
          "Name": "mvpaGLM",
          "GroupBy": [
            "run",
            "subject"
          ],
          "Transformations": {
            "Description": "merge the different semantic categories of real words into one",
            "Transformer": "cpp_spm",
            "Instructions": [
               {
                 "Name": "Replace",
                 "Input": "trial_type",
                 "Replace": [
                   {"key": "frw_liv", "value": "frw"},
                   {"key": "frw_nli", "value": "frw"},
                   {"key": "frw_mix", "value": "frw"},
                   {"key": "brw_liv", "value": "brw"},
                   {"key": "brw_nli", "value": "brw"},
                   {"key": "brw_mix", "value": "brw"}
                 ],
                 "Attribute": "value"
               }
            ]
          },
          "Model": {
              "Type": "glm",
              "X": [
                  "trial_type.frw",
                  "trial_type.fpw",
                  "trial_type.fnw",
                  "trial_type.ffs",
                  "trial_type.brw",
                  "trial_type.bpw",
                  "trial_type.bnw",
                  "trial_type.bfs",
                  "trans_x",
                  "trans_y",
                  "trans_z",
                  "rot_x",
                  "rot_y",
                  "rot_z"
              ],
              "HRF": {
                  "Variables": [
                    "trial_type.frw",
                    "trial_type.fpw",
                    "trial_type.fnw",
                    "trial_type.ffs",
                    "trial_type.brw",
                    "trial_type.bpw",
                    "trial_type.bnw",
                    "trial_type.bfs"
                  ],
                  "Model": "DoubleGamma"
              },
              "Options": {
                  "HighPassFilterCutoffHz": 0.0039,
                  "Mask": ""
              },
              "Software": {
                  "SPM": {
                      "SerialCorrelation": "FAST",
                      "HRFderivatives": "Temporal"
                  }
              }
          },

          "DummyContrasts": {
              "Test": "t",
              "Contrasts": [
                "trial_type.frw",
                "trial_type.fpw",
                "trial_type.fnw",
                "trial_type.ffs",
                "trial_type.brw",
                "trial_type.bpw",
                "trial_type.bnw",
                "trial_type.bfs"
              ]
          }
      }
  ]
}
